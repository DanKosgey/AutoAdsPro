/* ==========================================
   PREMIUM ANALYTICS DASHBOARD (REDESIGN)
   ========================================== */

/* Page Container Override */
#analytics-page {
    /* Ensure content starts correctly */
    padding-top: 1rem !important;
    max-width: 1400px !important;
    margin: 0 auto;
}

/* Header Reset */
#analytics-page .page-header {
    margin-top: 0 !important;
    padding-top: 0 !important;
    margin-bottom: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

/* 1. SECTIONS & LAYOUT */
.analytics-section {
    margin-bottom: 3rem;
    animation: fadeIn 0.6s cubic-bezier(0.2, 0.8, 0.2, 1);
}

.section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1.5rem;
    padding-left: 1rem;
    border-left: 4px solid var(--accent);
}

.section-header h3 {
    font-size: 1.5rem;
    font-weight: 800;
    margin: 0;
    background: linear-gradient(135deg, var(--text-primary), var(--text-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.section-badge {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--text-secondary);
    padding: 0.35rem 1rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
}

/* 2. PREMIUM CARDS (Bento Style) */
.analytics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
}

.analytics-card {
    background: var(--glass-bg);
    border: 1px solid var(--border);
    border-radius: 24px;
    padding: 1.75rem;
    display: flex;
    align-items: center;
    gap: 1.25rem;
    position: relative;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Hover Effect */
.analytics-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), transparent);
    opacity: 0;
    transition: opacity 0.4s ease;
}

.analytics-card:hover {
    transform: translateY(-5px) scale(1.02);
    border-color: var(--accent);
    box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.3);
}

.analytics-card:hover::before {
    opacity: 1;
}

.analytics-card .card-icon {
    width: 60px;
    height: 60px;
    border-radius: 18px;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.75rem;
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    flex-shrink: 0;
}

.analytics-card h4 {
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin: 0 0 0.5rem 0;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.analytics-card .value {
    font-size: 2.25rem;
    font-weight: 800;
    color: var(--text-primary);
    line-height: 1.1;
    margin-bottom: 0.25rem;
    text-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
}

/* 3. CHARTS CONTAINER */
.charts-row {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 1.5rem;
    margin-bottom: 2rem;
}

.chart-container {
    background: var(--glass-bg);
    border: 1px solid var(--border);
    backdrop-filter: blur(20px);
    border-radius: 24px;
    padding: 2rem;
    min-height: 400px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    position: relative;
    display: flex;
    flex-direction: column;
}

.chart-header h4 {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0;
    color: var(--text-primary);
}

.chart-info {
    font-size: 0.85rem;
    color: var(--text-secondary);
    display: block;
    margin-top: 5px;
}

canvas {
    flex: 1;
    width: 100% !important;
    height: auto !important;
    max-height: 320px !important;
}

/* 4. TABLE STYLES */
.table-container {
    background: var(--glass-bg);
    border: 1px solid var(--border);
    border-radius: 24px;
    overflow: hidden;
    backdrop-filter: blur(20px);
}

.analytics-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
}

.analytics-table thead {
    background: rgba(0, 0, 0, 0.2);
}

.analytics-table th {
    padding: 1.25rem 1.5rem;
    font-size: 0.8rem;
    font-weight: 700;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-bottom: 1px solid var(--border);
}

.analytics-table td {
    padding: 1.25rem 1.5rem;
    color: var(--text-primary);
    border-bottom: 1px solid var(--border);
    font-size: 0.95rem;
    transition: background 0.2s;
}

.analytics-table tbody tr:hover td {
    background: rgba(255, 255, 255, 0.03);
}

.analytics-table tbody tr:last-child td {
    border-bottom: none;
}

/* Group Name Cell */
.group-name {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.avatar-sm {
    width: 42px;
    height: 42px;
    border-radius: 12px;
    background: linear-gradient(135deg, var(--primary), var(--accent));
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    color: white;
    font-size: 0.9rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
}

/* 5. RESPONSIVE BREAKPOINTS */
@media (max-width: 1024px) {
    .charts-row {
        grid-template-columns: 1fr;
    }
}

@media (max-width: 768px) {
    .analytics-grid {
        grid-template-columns: 1fr;
    }

    .chart-container {
        min-height: 300px;
        padding: 1.5rem;
    }

    .analytics-table th,
    .analytics-table td {
        padding: 1rem;
    }

    #analytics-page {
        padding: 1rem !important;
    }
}

/* Animation */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}